{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "outDir": "./out",
    "rootDir": "./src",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "out",
    "dist"
  ]
}
